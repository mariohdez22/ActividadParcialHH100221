<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="50dp">

    <Button
        android:id="@+id/btn_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        android:text="Solicitar Permiso de Cámara" />

    <!-- Botón para abrir la cámara -->
    <Button
        android:id="@+id/btn_open_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/pink_300"
        android:text="Abrir Cámara"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_camera_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Estado de Permiso de Cámara: "
        android:paddingTop="8dp" />

    <Button
        android:id="@+id/btn_location"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        android:text="Solicitar Permiso de Ubicación" />

    <!-- Botón para obtener la ubicación -->
    <Button
        android:id="@+id/btn_get_location"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/pink_300"
        android:text="Obtener Ubicación"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_location_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Estado de Permiso de Ubicación: "
        android:paddingTop="8dp" />

    <Button
        android:id="@+id/btn_storage"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        android:text="Solicitar Permiso de Almacenamiento" />

    <!-- Botón para acceder al almacenamiento -->
    <Button
        android:id="@+id/btn_access_storage"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/pink_300"
        android:text="Acceder al Almacenamiento"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_storage_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Estado de Permiso de Almacenamiento: "
        android:paddingTop="8dp" />

</LinearLayout>